{% extends 'layout.twig' %}

{% block body %}

<header id="banner" role="banner">
  {% if siteName or siteSlogan or siteLogo %}
  <button class="button-branding" href="{{ canonical }}" title="{{ site_slogan }}" rel="home">
    <ul class="branding">
      {% if siteName %}
      <li class="branding_name">
        <p>{{ siteName }}</p>
      </li>
      {% endif %}
      
      {% if siteSlogan %}
      <li class="branding_slogan">
        <p>{{ siteSlogan }}</p>
      </li>
      {% endif %}

      {% if siteLogo %}
      <li class="branding_logo">
        <img src="{{ siteLogo }}" src="{{ siteLogoOneX }}, {{ siteLogoTwoX }}, {{ siteLogoThreeX }}" alt="{{ siteName }}"/> 
      </li>
      {% endif %}
    </ul>
  </button>
  {% endif %}

  <div id="main-menu-wrapper">
    <a href="#main-menu"id="main-menu-toggle" class="menu-toggle" aria-label="Open main menu">
      <span class="sr-only">Open main menu</span>
      <i class="fas fa-bars" aria-hidden="true"></i>
    </a>
  
    <nav id="main-menu" class="main-menu" role="navigation" aria-label="Main menu">
      <a href="#main-menu-toggle" id="main-menu-close" class="menu-close" aria-label="Close main menu">
        <span class="sr-only">Close main menu</span>
        <i class="far fa-times-circle" aria-hidden="true"></i>
      </a>
      
      <ul>
        {% if node_id or node_tsr %}
        <li>
          <a href="#{{ node_id }}" title="{{ node_tsr }}">{{ node_tsr }}</a>
        </li>
        {% endif %}

        {% if html_id or html_tsr %}
        <li>
          <a href="#{{ html_id|escape('js')|raw }}_rtcl" title="{{ html_tsr }}">{{ html_tsr }}</a>
        </li>
        {% endif %}

        {% if css_id or css_tsr %}
        <li>
          <a href="#{{ css_id|escape('js')|raw }}_rtcl" title="{{ css_tsr }}">{{ css_tsr }}</a>
        </li>
        {% endif %}

        {% if javascript_id or javasript_tsr %}
        <li>
          <a href="#{{ javascript_id|escape('js')|raw }}_rtcl" title="{{ javascript_tsr }}">{{ javascript_tsr }}</a>
        </li>
        {% endif %}

        {% if php_id or php_tsr %}
        <li>
          <a href="#{{ php_id|escape('js')|raw }}_rtcl" title="{{ php_tsr }}">{{ php_tsr }}</a>
        </li>
        {% endif %}

        {% if mysql_id or mysql_tsr %}
        <li>
          <a href="#{{ mysql_id|escape('js')|raw }}_rtcl" title="{{ mysql_tsr }}">{{ mysql_tsr }}</a>
        </li>
        {% endif %}
        
        <li>
          <a href="#kontakt" title="Kontakt">Kontakt</a>
        </li>
      </ul>
    </nav>
    <a href="#main-menu-toggle" class="backdrop" tabindex="-1" aria-hidden="true" hidden></a>
  </div>
</header>

<section id="slideshow">
  
